#!/bin/sh
# コミットメッセージに Mistral Vibe の Co-Authored-By を追記
msg_file="$1"
footer="Generated by Mistral Vibe.
Co-Authored-By: Mistral Vibe <vibe@mistral.ai>"

# 既に追記済みなら何もしない
if grep -q "Co-Authored-By: Mistral Vibe" "$msg_file"; then
  exit 0
fi

# メッセージ末尾に追記（改行を挟む）
printf '\n\n%s\n' "$footer" >> "$msg_file"
